<%= form_for ([@post, @post.comments.build]) do |f|%>
<div class="well">
	<p>
		<%= f.label :name, "Nombre" %><br />
		<%= f.text_field :name, :class => "form-control" %>
	</p>

	<p>
		<%= f.label :body, "Mensaje" %><br />
		<%= f.text_area :body, :class => "form-control" %>
	</p>
	<p>
		<%= f.submit "Comentar", :class => "btn btn-primary" %>
	</p>
</div>
<% end %>