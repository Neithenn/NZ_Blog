

<div class="container well">

<%= form_for @post do |f|%>
<p>
	<%= f.label :title %><br />
	<%= f.text_field :title, :class => "form-control" %>
</p>

<p>
	<%= f.label :tag_list, "Capitulos" %><br />
	<%= f.text_field :tag_list, :class => "form-control" %>
</p>


<p>
	<%= f.label :subtitle %><br />
	<%= f.text_area :subtitle , :maxlength => "300", :class => "form-control", :rows => "8" %>
</p>

<p>
	<%= f.label :content %><br />
	<%= f.text_area :content, :class => "form-control", :rows => "20" %>
</p>

<p>
	<%= f.label :img %><br />
	<%= f.text_field :img, :class => "form-control" %>
</p>

<p>
	<%= f.submit "Create new post" %>
</p>
<% end %>

</div>